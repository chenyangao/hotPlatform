<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>

      <view class="weui-tab__panel">
      
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">

          <block wx:for-items="{{list}}" wx:for-item="item" wx:key="*this">
            <view class="weui-form-preview">
              
              <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务金币</view>
                  <view class="weui-form-preview__value_in-hd">{{item.jobType}}</view>
                </view>
              </view>

              <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务类型</view>
                  <view class="weui-form-preview__value">{{item.jobType}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">小号</view>
                  <view class="weui-form-preview__value">{{item.userLevel}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务要求</view>
                  <view class="weui-form-preview__value">{{item.otherOpt}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">发布时间</view>
                  <view class="weui-form-preview__value">{{item.taskTime}}</view>
                </view>

              <view class="weui-form-preview__ft">
                <navigator class="weui-form-preview__btn weui-form-preview__btn_default" hover-class="weui-form-preview__btn_active">直接领取</navigator>
                <navigator url="" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">查看详情</navigator>
              </view>

              </view>
            </view>

          </block>

        </view>

        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">

          <block wx:for-items="{{list}}" wx:for-item="item" wx:key="*this">
            <view class="weui-form-preview">
              <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务金币</view>
                  <view class="weui-form-preview__value_in-hd">{{item.jobType}}</view>
                </view>
              </view>
              <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务类型</view>
                  <view class="weui-form-preview__value">{{item.jobType}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">小号</view>
                  <view class="weui-form-preview__value">{{item.userLevel}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务要求</view>
                  <view class="weui-form-preview__value">{{item.otherOpt}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">发布时间</view>
                  <view class="weui-form-preview__value">{{item.taskTime}}</view>
                </view>
              </view>
              <view class="weui-form-preview__ft">
                <navigator class="weui-form-preview__btn weui-form-preview__btn_default" hover-class="weui-form-preview__btn_active">直接领取</navigator>
                <navigator url="" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">查看详情</navigator>
              </view>
            </view>

          </block>

        </view>

        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">

          <block wx:for-items="{{list}}" wx:for-item="item" wx:key="*this">
            <view class="weui-form-preview">
              <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务金币</view>
                  <view class="weui-form-preview__value_in-hd">{{item.jobType}}</view>
                </view>
              </view>
              <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务类型</view>
                  <view class="weui-form-preview__value">{{item.jobType}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">小号</view>
                  <view class="weui-form-preview__value">{{item.userLevel}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">任务要求</view>
                  <view class="weui-form-preview__value">{{item.otherOpt}}</view>
                </view>
                <view class="weui-form-preview__item">
                  <view class="weui-form-preview__label">发布时间</view>
                  <view class="weui-form-preview__value">{{item.taskTime}}</view>
                </view>
              </view>
              <view class="weui-form-preview__ft">
                <navigator class="weui-form-preview__btn weui-form-preview__btn_default" hover-class="weui-form-preview__btn_active">直接领取</navigator>
                <navigator url="" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">查看详情</navigator>
              </view>
            </view>

          </block>

          <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="showTopTips">更多</button>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>