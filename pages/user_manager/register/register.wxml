<!--register.wxml-->
<!--task_submit.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__hd">
    <view class="page__desc"> 友情提醒：为保证您的注册账号能通过审核，请仔细填写注册信息，带*号的必输</view>
  </view>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="page__bd">
      <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示:{{tip}}</view>

      <view class="weui-cells weui-cells_after-title">

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
            <input type="number" name="user_no" maxlength="11" class="weui-input"  auto-focus />
          </view>
        </view> 


      <view class="weui-cells__tips">您正在使用中的有效手机号</view>


        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">验证码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="number" name="identifying_code" maxlength="4" placeholder="填写收到的4位验证妈" />
          </view>
          <view class="weui-cell__ft">
            <view class="weui-vcode-btn">获取验证码</view>
          </view>
        </view>


        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">密码(*)</view>
          </view>
          <view class="weui-cell__bd">
            <input type="password" maxlength="20" name="password" class="weui-input" placeholder="密码长度为6-20位,字母请区分大小写" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">重复登录密码(*)</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" maxlength="20" type="password" name="password_again" placeholder="请再输入一遍您上面输入的密码" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">IS名(*)</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name="is_no" placeholder="您IS马甲的编号" />
          </view>
        </view>

      </view>

      <view class="weui-cells__tips">底部说明文字底部说明文字</view>
      <view class="weui-cells__title">表单报错</view>

      <view class="weui-cell weui-cell_input weui-cell_warn">
        <view class="weui-cell__hd">
          <view class="weui-label">IS语音账号(*)</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" type="number" placeholder="您正在使用中的有效手机号" />
        </view>
        <view class="weui-cell__ft">
          <icon type="warn" size="23" color="#E64340"></icon>
        </view>
      </view>

      <view class="weui-cells__title">QQ号码(*)</view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input class="weui-input" type="number" placeholder="请填写入会IS的QQ号码" />
        </view>
      </view>


      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">所在地</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindCountryChange" name="province" value="{{countryIndex}}" range="{{countries}}">
            <view class="weui-select weui-select_in-select-after">{{countries[countryIndex]}}</view>
          </picker>
        </view>
      </view>

      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">验证码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入验证码" />
        </view>
        <view class="weui-cell__ft">
          <image class="weui-vcode-img" src="/images/vcode.jpg" style="width: 108px"></image>
        </view>
      </view>

      <checkbox-group bindchange="bindAgreeChange">
        <label class="weui-agree" for="weuiAgree">
          <view class="weui-agree__text">
            <checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{isAgree}}" />
            <view class="weui-agree__checkbox-icon">
              <icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9" wx:if="{{isAgree}}"></icon>
            </view>
            阅读并同意
            <navigator url="pages/user_manager/register/terms/terms" class="weui-agree__link">《相关条款》</navigator>
          </view>
        </label>
      </checkbox-group>

      <view class="weui-btn-area">
        <button class="weui-btn" formType="submit">确定</button>
        <button class="weui-btn" formType="reset">重新填写</button>
      </view>
    </view>
  </form>
 

</view>