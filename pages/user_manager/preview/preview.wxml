<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">

  <view class="weui-form-preview">

    <view class="weui-form-preview__hd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">用户类型:</view>
        <view class="weui-form-preview__value_in-hd">管理员</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">手机号：</view>
        <view class="weui-form-preview__value_in-hd">{{user.phoneNumber}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">平台昵称：</view>
        <view class="weui-form-preview__value_in-hd">{{user.nickName}}</view>
      </view> 
    </view>

    <view class="weui-form-preview__bd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">QQ号码:</view>
        <view class="weui-form-preview__value">{{user.qq}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">IS名:</view>
        <view class="weui-form-preview__value">{{user.isName}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">IS语音账号:</view>
        <view class="weui-form-preview__value">{{user.isNumber}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">所在地:</view>
        <view class="weui-form-preview__value">{{user.province}}</view>
      </view>

      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">个人说明:</view>
        <view class="weui-form-preview__value">{{user.remark}}认真负责专业</view>
      </view>

      <view class="weui-media-box__info">
           <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">加入时间：2天前</view>
      </view>

      <view class="weui-form-preview__ft">
        <navigator url="" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">修改</navigator>
      </view>

    </view>
  </view>

</view>